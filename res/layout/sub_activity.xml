<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#ffffff">
    	<LinearLayout 
			android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:background="#708090">
			<Button
			    android:visibility="gone"
	            android:id="@+id/bt_plus_coin"
	            android:layout_width="wrap_content"
	            android:background="@drawable/btn_bg_plus_coin"
	            android:layout_height="wrap_content"
	            android:textColor="#ffffff"
	            android:textStyle="bold"
	            android:gravity="center"
	            android:layout_marginLeft="10dip"/>
			<Button
	            android:id="@+id/bt_home"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="#ffffff"
	            android:textStyle="bold"
	            android:gravity="center"
	            android:background="@drawable/btn_bg_home"/>
			<TextView
			     android:id="@+id/txt_main_title"
                 android:textColor="#000000"
                 android:textStyle="bold"
                 android:layout_width="0dip" 
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:singleLine="true"
                 android:gravity="center"/>
			<Button
	            android:id="@+id/bt_intent_favorite"
	            android:layout_width="wrap_content"
	            android:background="@drawable/btn_bg_favorite"
	            android:layout_height="wrap_content"
	            android:textColor="#ffffff"
	            android:textStyle="bold"
	            android:gravity="center"/>
			<Button
			    android:visibility="gone"
	            android:id="@+id/bt_category"
	            android:layout_width="wrap_content"
	            android:background="@drawable/btn_bg_category"
	            android:layout_height="wrap_content"
	            android:textColor="#ffffff"
	            android:textStyle="bold"
	            android:paddingRight="20dip"
	            android:gravity="center"/>
		</LinearLayout>
		<RelativeLayout
	        android:layout_width="fill_parent"
	        android:layout_height="0dip"
	        android:layout_weight="1">
		<LinearLayout
			 android:id="@+id/layout_listview_main"    
		     android:orientation="vertical" 
		     android:layout_width="fill_parent"
		     android:layout_height="fill_parent"
		     android:visibility="visible">
			<ListView
		        android:id="@+id/listview_main"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:cacheColorHint="#00000000"
		        android:divider="#708090"
		        android:dividerHeight="0.3dp"/>
		</LinearLayout>
		<LinearLayout
	        android:id="@+id/layout_nodata"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:gravity="center"
			android:visibility="gone">
	        <TextView
	            android:id="@+id/txt_nodata"
	            android:text="@string/txt_main_activity2"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textColor="#000000"
		        android:textSize="13dp"/>
         </LinearLayout>
         <LinearLayout
                android:visibility="gone" 
                android:orientation="vertical"
                android:id="@+id/layout_progress" 
                android:layout_width="fill_parent" 
                android:layout_height="wrap_content" 
                android:layout_centerInParent="true" 
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true">
          <ProgressBar
                android:layout_gravity="center" 
                android:id="@android:id/progress"
                android:paddingLeft="10.0dip"
                android:paddingRight="10.0dip"
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                style="?android:progressBarStyle" />
          </LinearLayout>           
	</RelativeLayout>
	<LinearLayout 
	    android:id="@+id/action_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:visibility="gone" >
        <Button
            android:id="@+id/bt_all_select"
            android:layout_width="0dip"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="@string/txt_continue_activity4"
            android:textSize="17sp"
            android:textColor="@drawable/btn_text_selector"
            android:background="@drawable/btn_rounded_corner"/>
        <Button
            android:id="@+id/bt_play_video"
            android:layout_width="0dip"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="@string/txt_continue_activity6"
            android:textSize="17sp"
            android:textColor="@drawable/btn_text_selector"
            android:background="@drawable/btn_rounded_corner"/>
        <Button
            android:visibility="gone"
            android:id="@+id/bt_play_media"
            android:layout_width="0dip"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="@string/txt_continue_activity9"
            android:textSize="17sp"
            android:textColor="@drawable/btn_text_selector"
            android:background="@drawable/btn_rounded_corner"/>
	</LinearLayout>
	<RelativeLayout 
          android:id="@+id/ad_layout"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content" 
          android:layout_gravity="center_horizontal"> 
    </RelativeLayout>
</LinearLayout>